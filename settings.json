// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // ------------------------------------------------------
  // AI
  // ------------------------------------------------------
  "language_models": {
    "openai_compatible": {
      "Venice": {
        "api_url": "https://api.venice.ai/api/v1",
        "available_models": [
          {
            "name": "grok-41-fast",
            "max_tokens": 262144,
            "capabilities": {
              "tools": true,
              "images": true,
              "parallel_tool_calls": false,
              "prompt_cache_key": false
            }
          },
          {
            "name": "gemini-3-pro-preview",
            "max_tokens": 202752,
            "capabilities": {
              "tools": true,
              "images": true,
              "parallel_tool_calls": false,
              "prompt_cache_key": false
            }
          },
          {
            "name": "kimi-k2-thinking",
            "max_tokens": 262144,
            "capabilities": {
              "tools": true,
              "images": false,
              "parallel_tool_calls": false,
              "prompt_cache_key": false
            }
          },
          {
            "name": "zai-org-glm-4.6",
            "max_tokens": 202752,
            "capabilities": {
              "tools": true,
              "images": false,
              "parallel_tool_calls": false,
              "prompt_cache_key": false
            }
          }
        ]
      }
    }
  },
  "agent": {
    "default_profile": "minimal",
    "default_model": {
      "provider": "Venice",
      "model": "gemini-3-pro-preview"
    },
    "dock": "left",
    "play_sound_when_agent_done": true,
    "enable_feedback": false
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },

  // ------------------------------------------------------
  // Appearance & theme
  // ------------------------------------------------------
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "Ayu Dark"
  },
  "icon_theme": "Zed (Default)",
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "buffer_line_height": "standard",
  "active_pane_modifiers": {
    "inactive_opacity": 0.5
  },

  // ------------------------------------------------------
  // Editor behavior & visuals
  // ------------------------------------------------------
  "tab_size": 2,
  "preferred_line_length": 100,
  "soft_wrap": "preferred_line_length",
  "use_smartcase_search": false,
  "auto_signature_help": true,
  "restore_on_startup": "none",
  "indent_guides": {
    "active_line_width": 3,
    "line_width": 1
  },
  "inlay_hints": {
    "enabled": true
  },
  "gutter": {
    "min_line_number_digits": 5
  },
  "scrollbar": {
    "show": "auto",
    "cursors": true,
    "git_diff": true,
    "search_results": true,
    "diagnostics": "all"
  },

  // ------------------------------------------------------
  // Formatting & saving
  // ------------------------------------------------------
  "autosave": "on_focus_change",
  "format_on_save": "on",
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": true,

  // ------------------------------------------------------
  // Panels & layout
  // ------------------------------------------------------
  "bottom_dock_layout": "contained",
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show": true
  },
  "title_bar": {
    "show_menus": true,
    "show_branch_icon": true
  },
  "project_panel": {
    "entry_spacing": "standard",
    "default_width": 300.0,
    "dock": "right"
  },
  "outline_panel": {
    "dock": "right",
    "button": false
  },
  "notification_panel": {
    "default_width": 300.0,
    "dock": "right"
  },
  "collaboration_panel": {
    "button": false
  },
  "calls": {
    "mute_on_join": true
  },
  "git_panel": {
    "dock": "right"
  },

  // ------------------------------------------------------
  // Telemetry
  // ------------------------------------------------------
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
