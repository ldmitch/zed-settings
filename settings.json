// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // ------------------------------------------------------
  // AI
  // ------------------------------------------------------
  "context_servers": {
    "mcp-server-context7": {
      "enabled": true,
      "settings": {
        "context7_api_key": "CONTEXT7_API_KEY",
      },
    },
  },
  "language_models": {
    "openai_compatible": {
      "Venice": {
        "api_url": "https://api.venice.ai/api/v1",
        "available_models": [
          {
            "name": "grok-41-fast",
            "max_tokens": 262144,
            "capabilities": {
              "tools": true,
              "images": true,
              "parallel_tool_calls": false,
              "prompt_cache_key": false,
            },
          },
          {
            "name": "kimi-k2-thinking",
            "max_tokens": 262144,
            "capabilities": {
              "tools": true,
              "images": false,
              "parallel_tool_calls": false,
              "prompt_cache_key": false,
            },
          },
          {
            "name": "claude-opus-45",
            "max_tokens": 202752,
            "capabilities": {
              "tools": true,
              "images": true,
              "parallel_tool_calls": false,
              "prompt_cache_key": false,
            },
          },
          {
            "name": "openai-gpt-52",
            "max_tokens": 262144,
            "capabilities": {
              "tools": true,
              "images": true,
              "parallel_tool_calls": false,
              "prompt_cache_key": false,
            },
          },
        ],
      },
    },
  },
  "agent": {
    "default_profile": "write",
    "always_allow_tool_actions": true,
    "profiles": {
      "ask": {
        "context_servers": {
          "mcp-server-context7": {
            "tools": {
              "resolve-library-id": true,
              "get-library-docs": true,
            },
          },
        },
        "name": "Ask",
        "tools": {
          "diagnostics": false,
          "fetch": true,
          "list_directory": true,
          "project_notifications": false,
          "now": true,
          "find_path": true,
          "read_file": true,
          "open": true,
          "grep": true,
          "thinking": true,
          "web_search": false,
        },
      },
      "write": {
        "context_servers": {
          "mcp-server-context7": {
            "tools": {
              "resolve-library-id": true,
              "get-library-docs": true,
            },
          },
        },
        "name": "Write",
        "tools": {
          "copy_path": true,
          "create_directory": true,
          "delete_path": true,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": true,
          "project_notifications": false,
          "move_path": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "open": true,
          "grep": true,
          "terminal": true,
          "thinking": true,
          "web_search": false,
        },
      },
    },
    "default_model": {
      "provider": "Venice",
      "model": "claude-opus-45",
    },
    "dock": "left",
    "play_sound_when_agent_done": true,
    "enable_feedback": false,
  },
  "features": {
    "edit_prediction_provider": "copilot",
  },

  // ------------------------------------------------------
  // Appearance & theme
  // ------------------------------------------------------
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "Ayu Dark",
  },
  "icon_theme": "Zed (Default)",
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "buffer_line_height": "standard",
  "active_pane_modifiers": {
    "inactive_opacity": 0.5,
  },

  // ------------------------------------------------------
  // Editor behavior & visuals
  // ------------------------------------------------------
  "tab_size": 2,
  "preferred_line_length": 100,
  "soft_wrap": "editor_width",
  "use_smartcase_search": false,
  "auto_signature_help": true,
  "indent_guides": {
    "active_line_width": 3,
    "line_width": 1,
  },
  "inlay_hints": {
    "enabled": true,
  },
  "gutter": {
    "min_line_number_digits": 5,
  },
  "scrollbar": {
    "show": "auto",
    "cursors": true,
    "git_diff": true,
    "search_results": true,
    "diagnostics": "all",
  },

  // ------------------------------------------------------
  // Formatting & saving
  // ------------------------------------------------------
  "autosave": "on_focus_change",
  "format_on_save": "on",
  "restore_on_startup": "last_session",
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": true,

  // ------------------------------------------------------
  // Panels & layout
  // ------------------------------------------------------
  "bottom_dock_layout": "contained",
  "tabs": {
    "file_icons": true,
    "git_status": true,
  },
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show": true,
  },
  "title_bar": {
    "show_menus": true,
    "show_branch_icon": true,
  },
  "project_panel": {
    "entry_spacing": "standard",
    "default_width": 300.0,
    "dock": "right",
  },
  "outline_panel": {
    "dock": "right",
    "button": false,
  },
  "notification_panel": {
    "default_width": 300.0,
    "dock": "right",
  },
  "collaboration_panel": {
    "button": false,
  },
  "calls": {
    "mute_on_join": true,
  },
  "git_panel": {
    "dock": "right",
  },

  // ------------------------------------------------------
  // Telemetry
  // ------------------------------------------------------
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
}
